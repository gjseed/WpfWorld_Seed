<Page x:Class="WpfWorld_Seed.First"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfWorld_Seed"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="First">

    <Grid>
        <TextBlock Name="txtBlock" HorizontalAlignment="Center" Margin="0,239,0,0" Text="{Binding ElementName=txtBox,Path=Text,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Background="Snow" Height="140" Width="260"/>
        <TextBox Name="txtBox" HorizontalAlignment="Left" Margin="316,144,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Page>
